{{ form_start(form) }}
{% if title is defined %}
<h2 class="title"> {{ title }} </h2>
{% endif %}

{{ form_row(form.title) }}
{{ form_row(form.content) }}
<div class="flex">
<div class=""> 
{% if required is defined %}
    {{ form_row(form.imageFile,  {attr:{reuired: required}} ) }}
{% else %}
    {{ form_row(form.imageFile) }}
{% endif %}
</div>
<div class="image-preview">
    {% if not article.imageUrl == "" %}
     <img src=" {{article.imageUrl}} " alt="Image de l'article {{article.title}} ">
    {% endif %}
    

 </div>
</div>

{{ form_row(form.categories) }}
<div class="flex">
 <button class="btn">{{ button_label|default('Save') }}</button>
 <a href="{{ path('app_article_index') }}" class="btn">Annuler</a>
</div>
   
{{ form_end(form) }}


