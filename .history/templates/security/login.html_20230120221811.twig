{% extends 'base.html.twig' %}

{% block title %}Jstore | authentification{% endblock %}
{% set aside = "not" %}
{% block header %}
{{ include ("header/header.html.twig", {name: "Se connecter"}) }}
{% endblock %}
{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
           Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </div>
    {% endif %}

   
   <div class="form-group flex">
    <input type="email" value="{{ last_username }}" name="email" placeholder="Votre E-mail ..." id="inputEmail" class="form-control flex-1" autocomplete="email" required autofocus>
   </div>
   <div class="form-group flex">
    <input type="password" name="password" placeholder="Votre mot de passe ..." id="inputPassword" class="form-control flex-1" autocomplete="current-password" required>
</div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        S'identifier
    </button>
</form>
{% endblock %}
